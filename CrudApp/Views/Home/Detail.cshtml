@model CrudApp.Models.ViewModels.BaseVm
@{
    Layout = "~/Views/Shared/_StormLayout1.cshtml";
}

<!-- Detail -->
<div class="page-title">

    <div class="page-title-overlay"></div>

    <div class="container">

        <h1>Archived</h1>

    </div>

</div>



<div class="content">



    <div class="container">

        <!-- Detial Row -->

        <div class="row detail">

            <div class="col-md-6 col-sm-6">
                @if (Model._Document.TypeId == CrudApp.Enums.DocumentType.Map)
                {
                    <h2><a href="#">@Model._Document.Title (@Model._Document.Date)</a></h2>

                    <a href="@Model._Document.ResourceUrl">
                        <img src="@Model._Document.ResourceUrl" class="img-display" alt="">
                    </a>
                }
                @if (Model._Document.TypeId == CrudApp.Enums.DocumentType.Photo)
                {
                    <h2><a href="#">@Model._Document.Title (@Model._Document.Date)</a></h2>

                    <a href="@Model._Document.ResourceUrl">
                        <img src="@Model._Document.ResourceUrl" class="img-display" alt="">
                    </a>
                }

            </div>

            <div class="col-md-6 col-sm-6">
                <div class="item-desctiption">
                    @if (Model._Document.TypeId == CrudApp.Enums.DocumentType.Map)
                    {
                        <a href="#"><span class="fa fa-map"></span>  View on Map</a>
                    }


                    <h3 class="margin-bottom-1">Shared by <strong>@Model._Document.Contributor</strong></h3>

                    <p>
                        @Model._Document.Description
                    </p>
                    <h4><strong>Resource Website</strong></h4>
                    <a href="#">a link</a>
                </div>
            </div>

        </div>
        <br />
        <!-- End Detial Row -->

        <hr />
        <h2>Related Douments</h2>

        <div class="row">

            <div class="col-sm-4">

                <div class="detail">

                    <h4><a href="#">Document Title 1 (1898)</a></h4>

                    <a href="#" class="_image-short">

                        <img src="~/Content/Theme/Images/media/LOC_LACounty_1888.jpg" class="img-responsive" />

                    </a>

                </div>

            </div>

            <div class="col-sm-4">

                <div class="detail">

                    <h4><a href="#">Document Title 2 (1906)</a></h4>

                    <a href="#" class="_image-short">


                        <img src="~/Content/Theme/Images/media/LOC_BirdsEyeViewOfLA_1888.jpg" class="img-responsive" />

                    </a>

                </div>

            </div>

            <div class="col-sm-4">

                <div class="detail">

                    <h4><a href="#">Document Title 3 (1887)</a></h4>

                    <a href="#" class="_image-short">

                        <img src="~/Content/Theme/Images/media/LOC_CatalinaIsland_1906.jpg" class="img-responsive" />

                    </a>

                </div>

            </div>

        </div>

    </div>

</div>
